{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "semi": true,
      "trailingComma": "es5",
      "printWidth": 100,
      "tabWidth": 2,
      "endOfLine": "auto"
    }]
  }
}
